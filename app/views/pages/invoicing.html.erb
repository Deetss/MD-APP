<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Invoicing<br/>
      <small>After all, tomorrow is another day!
      </small>
    </h1>


    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Outstanding Invoices: <%= @totalinvoices %></div>
      <div class="panel-body">


    <table class="table">
      <thead>
      <tr>
        <!-- <th colspan="1"></th> -->
        <th>Created at</th>
        <th>Cart id</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Address 1</th>
        <th>Address 2</th>
        <th>City</th>
        <th>State</th>
        <th>Postal</th>
        <th>Email</th>

      </tr>
      </thead>

      <tbody>
      <!-- <th>Invoices for users</th> -->

      <% @invoiceusers.each do |iu| %>
          <tr>
            <td><%= iu.user.created_at.strftime("%m/%d/%Y") %> </td>
            <td>  <%= iu.id  %> </td>
            <td>  <%= iu.user.firstname  %> </td>
            <td>  <%= iu.user.lastname %>  </td>
            <td>  <%= iu.user.address1 %>  </td>
            <td>  <%= iu.user.address2 %>  </td>
            <td>  <%= iu.user.city %>  </td>
            <td>  <%= iu.user.state %>  </td>
            <td>  <%= iu.user.postal %>  </td>
            <td>  <%= iu.user.email %>  </td>

          </tr>
      <% end %>
      </tbody>
    </table>



</div>
    </div>

  </div>
</div>